---
interface Props {
  title: string;
  description: string;
  buttonText?: string;
}

const { title, description, buttonText = "Learn more &rarr;" } = Astro.props;
---

<div class="dark:bg-gray-800 shadow p-6 rounded-lg">
  <div class="text-blue-500 mb-4">
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-400 mb-4">
    {description}.
  </p>
  <a
    href="#"
    class="text-blue-500 hover:text-blue-400"
    >{buttonText}</a
  >
</div>
